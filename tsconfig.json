{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@store/*": ["src/store/*"],
      "@selectors/*": ["src/components/redux/selectors/*"],
      "@helpers/*": ["src/helpers/*"],
      "@header/*": ["src/components/header/*"],
      "@components/*": ["src/components/*"],
      "@tasks-list/*": ["src/components/tasks-list/*"],
      "@main-input/*": ["src/components/main-input/*"],
      "@custom-checkbox/*": ["src/components/custom-checkbox/*"],
      "@nav-bar/*": ["src/components/nav-bar/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
